			layoutpolicy_horizontal = expanding
			margin = { 10 10 }
		}
		blockoverride "header_tooltip"
		{
			tooltip = "LEGEND_HEADER_TT"
		}

		blockoverride "header_background_color"
		{
			using = Legend_Quality_Colors
		}

		blockoverride "header_pre_contents"
