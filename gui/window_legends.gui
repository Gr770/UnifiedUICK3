			}

			icon_legend_highlight = {
				visible = "[Legend.IsCharacterPromotingLegend( GetPlayer )]"
				datacontext = "[Legend.GetType]"
			}
		}
		blockoverride "header_top_contents"
		{
			text_single = {
				text = "[Legend.GetNameNoTooltip]"
